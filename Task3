#include <iostream>
using namespace std;

int main()
{
    double x, y;
    cout << "Enter an ordinate: " << endl;
    cin >> x;
    cout << "Enter an abscissa" << endl;
    cin >>y ;


    printf("(%.0f;%.0f)", x, y);

    if ((x*x+y*y>1))
        printf("point belongs to the first quarter", x, y);
    else if ((x*x+y*y<4))
        printf(" point belongs to the second quarter", x, y);
    return 0;
}
